{
  "kind": "collectionType",
  "collectionName": "submissions",
  "info": {
    "singularName": "submission",
    "pluralName": "submissions",
    "displayName": "Submission",
    "description": "Poetry and article submissions from writers"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "submitted", "under_review", "accepted", "revision_requested", "published", "rejected"],
      "default": "draft",
      "required": true
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "reviewedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "feedback": {
      "type": "text"
    },
    "lastSaved": {
      "type": "datetime"
    },
    "submittedAt": {
      "type": "datetime"
    },
    "reviewedAt": {
      "type": "datetime"
    },
    "editorNotes": {
      "type": "text"
    },
    "versionHistory": {
      "type": "json"
    },
    "category": {
      "type": "string"
    },
    "tags": {
      "type": "json"
    }
  }
}
